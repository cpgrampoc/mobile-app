<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_header"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:src="@drawable/logo"
        android:layout_above="@id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_width="@dimen/standard_100"
        android:layout_height="@dimen/standard_100">

    </ImageView>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:text="Welcome to"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/header"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:text="Centralized Public Grievance\n Redressal And Monitoring System"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
    </TextView>


    <ImageView
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:src="@drawable/logo_darpg"
        android:layout_height="80dp"
        app:tint="@color/white">
    </ImageView>
</RelativeLayout>