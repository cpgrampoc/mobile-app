<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@color/light_grey"
    tools:context=".ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintBaseline_toTopOf="parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                app:layout_constraintTop_toBottomOf="@id/text_user"
                android:id="@+id/text_home_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:text="Quick Summery"
                android:textColor="@color/black"
                android:layout_marginTop="20dp" />

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/text_home_second"
                android:id="@+id/raiseButton"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/blue_semi_transparent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:text="20"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:padding="10dp"
                            android:textSize="12dp"
                            android:layout_width="match_parent"
                            android:text="Total\nGrievances"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/semi_grey"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:text="10"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:padding="10dp"
                            android:textSize="12dp"
                            android:layout_width="match_parent"
                            android:text="Pending\nGrievances"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/green_300"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:text="7"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:padding="10dp"
                            android:textSize="12dp"
                            android:layout_width="match_parent"
                            android:text="Closed\nGrievances"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/orange_300"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:text="3"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:padding="10dp"
                            android:textSize="12dp"
                            android:layout_width="match_parent"
                            android:text="Sent Back\nGrievances"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <TextView
                android:id="@+id/text_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:textSize="20sp"
                android:text="Hi, Rohan!"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:text="@string/title_grievance"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/raiseButton" />



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/standard_100"
                app:layout_constraintTop_toBottomOf="@id/text_home">
            </androidx.recyclerview.widget.RecyclerView>








        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>